@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DasboardLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Category List</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                       <a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-success">New Category</a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Total Product</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                       @{
                           if (Model.Count > 0)
                           {
                               foreach (var category in Model)
                               {
                                               <tr>
                                                   <td>@category.Id</td>
                                                   <td>@category.CategoryName</td>
                                                   <td>@category.Description</td>
                                                   @{
                                                       switch (category.Status)
                                                       {
                                                           case Project.Entity.Enum.DataStatus.Inserted:
                                                               <td>Eklendi</td>
                                                               break;
                                                           case Project.Entity.Enum.DataStatus.Updated:
                                                               <td>Güncellendi</td>
                                                               break;
                                                           case Project.Entity.Enum.DataStatus.Deleted:
                                                               break;
                                                           <td>Silindi</td>
                                                       }
                                                   }
                                                   <td>
                                                       0
                                                   </td>
                                                   <td>
                                                       <a asp-action="Update" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-xs btn-warning">update</a>
                                                       <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-xs btn-danger">delete</a>
                                                   </td>
                                               </tr>
                                               }
                                           }


                           }
                        
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>